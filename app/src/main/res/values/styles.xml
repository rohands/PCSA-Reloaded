<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ListView" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/windowBackground</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">3dip</item>
    </style>
    <style name="pcsaSpinnerShownStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/primary_text_default_material_dark</item>
    </style>

    <style name="pcsaAlertDialogStyle">
        <item name="android:background">@color/background_app</item>
        <item name="android:textColorLink">@color/primary_text_default_material_dark</item>
    </style>

    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_btn_rounded_rectangle</item>
        <item name="android:textColor">@color/primary_text_default_material_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/app_button_side_padding</item>
        <item name="android:paddingRight">@dimen/app_button_side_padding</item>
    </style>

    <style name="NavigateButton" parent="AppButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="NavigateWrapButton" parent="AppButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
