<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#2FAA96"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_normal"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textColor="#fffaf3f1"
            android:text="Enter the phone numbers of Comrades here"
            />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_comrade1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/edit_text_bg">

            <EditText
                android:id="@+id/comrade1EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textCursorDrawable="@null"
                android:layout_gravity="center"
                android:textColor="#000"
                android:inputType="number"
                android:hint="Comrade 1"
                android:ems="10"
                android:paddingTop="15px" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_comrade2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <EditText
                android:id="@+id/comrade2EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textCursorDrawable="@null"
                android:layout_gravity="center"
                android:textColor="#000"
                android:inputType="number"
                android:hint="Comrade 2"
                android:ems="10"
                android:paddingTop="15px" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_comrade3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <EditText
                android:id="@+id/comrade3EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textCursorDrawable="@null"
                android:layout_gravity="center"
                android:textColor="#000"
                android:inputType="number"
                android:hint="Comrade 3"
                android:ems="10"
                android:paddingTop="15px" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_comrade4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <EditText
                android:id="@+id/comrade4EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textCursorDrawable="@null"
                android:layout_gravity="center"
                android:textColor="#000"
                android:inputType="number"
                android:hint="Comrade 4"
                android:ems="10"
                android:paddingTop="15px" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_comrade5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <EditText
                android:id="@+id/comrade5EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textCursorDrawable="@null"
                android:layout_gravity="center"
                android:textColor="#000"
                android:inputType="number"
                android:hint="Comrade 5"
                android:ems="10"
                android:paddingTop="15px" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_comrade6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <EditText
                android:id="@+id/comrade6EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textCursorDrawable="@null"
                android:layout_gravity="center"
                android:textColor="#000"
                android:inputType="number"
                android:hint="Comrade 6"
                android:ems="10"
                android:paddingTop="15px" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/okButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:background="@drawable/btn_rounded_rectangle"
            android:text="OK"
            android:textSize="@dimen/text_normal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"/>


    </LinearLayout>

</ScrollView>
